model Cliente {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  password  String    // Senha do usuário adicionada por segurança
  active    Boolean   @default(true) // Campo que diz se o usuário está ativo.
  saldo     Decimal   @default(0) // Saldo do cliente, inicia em 0

  // Relação N:N com Client
  clients   ClienteClient[]
  // Relação 1:N  com Transacao
  transacoes  Transacao[]
  // Datas do registro
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}